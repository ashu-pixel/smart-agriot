    <div class="background-img-cover">
        <div class="container my-5 pt-3">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <h5 class="text-center">Please login to use Smart Agr-Iot</h5>
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body px-5  text-center">

                            <div class="mb-md-5 mt-md-4 ">

                                <form action="/login" method="post">
                                    <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                                    <p class="text-white-50 mb-3">Please enter your Id and password!</p>

                                    <% if(invalid) {%>
                                        <p class="text-white-50 text-danger ">Invalid Credentials!</p>
                                        <% } %>
                                            <div class="form-outline form-white mb-4">
                                                <input type="text" id="typeUserX" class="form-control form-control-lg" name="userN" />
                                                <label class="form-label h3" for="typeUserX">User ID</label>
                                            </div>

                                            <div class="form-outline form-white mb-4">
                                                <input type="password" id="typePasswordX" class="form-control form-control-lg" name="passW" />
                                                <label class="form-label h3" for="typePasswordX">Password</label>
                                            </div>

                                            <!-- <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p> -->

                                            <button type="submit" class="btn btn-outline-light btn-lg px-5">Login</button>
                                            <div class="d-flex my-1">
                                                <hr style="border-top: 6px dotted #e2ffe6;" class="w-25"> OR
                                                <hr style="border-top: 6px dotted #e2ffe6;" class="w-25">
                                            </div>
                                            <div class="mt-0 text-center">
                                                <h5 class="alert-danger rounded p-1">
                                                    Use guest login credentials to test ours product
                                                </h5>
                                                <button class="btn font-weight-bold btn-outline-success my-2 btn-sm " type="button" id="farmerLogin">
                                                    <h6>
                                                        Login as a guest[FARMER]
                                                    </h6>
                                                </button>
                                                <button class="btn font-weight-bold btn-outline-success my-2 btn-sm " type="button" id="expertLogin">
                                                    <h6>
                                                        Login as a guest[EXPERT]
                                                    </h6>
                                                </button>
                                            </div>

                                </form>


                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('newFooter'); %>


        <script>
            document.getElementById("farmerLogin").addEventListener("click", () => {
                document.getElementById("typeUserX").value = 1001
                document.getElementById("typePasswordX").value = "FarmerPassword@123"
            })
            document.getElementById("expertLogin").addEventListener("click", () => {
                document.getElementById("typeUserX").value = 101
                document.getElementById("typePasswordX").value = "ExpertPassword@123"
            })
        </script>


